  {'lager',
    ".*",
    {git, "https://github.com/basho/lager.git",
      {branch, "master"}}},

  {eredis,
    ".*",
    {git, "https://github.com/wooga/eredis.git",
      {tag, "v1.0.8"}}},

  {poolboy,
    ".*",
    {git, "https://github.com/devinus/poolboy.git",
      {tag, "1.5.1"}}}
]}.
